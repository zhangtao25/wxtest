<!--index.wxml-->
<view class="article-recommends">
<scroll-view class="articles-container" scroll-y="true" style="height:1050rpx">
  <view class="articles-list" wx:for="{{msg}}" wx:key="index" bindtap="goArticleDetails">
    <view class="main">
      <view class="main_t">
        <text>{{item.wenzi}}</text>
      </view>
      <view class="main_b">
        <text>活动{{date}}</text>
      </view>
    </view>
    <view class="img">
      <image mode="aspectFit" style="width:200rpx;height:200rpx" src="{{item.img}}"></image>
    </view>
  </view>
</scroll-view>
</view>
